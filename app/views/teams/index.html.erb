<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team details</th>
      <th>Sport</th>
      <th>Game date</th>
      <th>Points</th>
      <th>Created at</th>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_details %></td>
        <td><%= team.sport %></td>
        <td><%= team.game_date %></td>
        <td><%= team.points %></td>
        <td><%= team.created_at %></td>
        <td><%= team.transaction_id %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

